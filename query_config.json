{
    "configurator" : [
         {
           "text": "Hero death id",
           "value":
             "SELECT now() as time, hero_death_id as \"hero_death_id\"",
           "from": "FROM logic_hero_death",
           "attributes": [
               {
                "text": "creature id",
                "value":
                  ", text(creature_id) as metric"
               },
               {
                "text": "session id",
                "value":
                  ", text(session_id) as metric"
               },
               {
                "text": "basic faction",
                "value":
                  ", text(basic_faction) as metric"
               }
           ]
         },
         {
           "text": "Unit death",
           "value":
             "SELECT now() as time, count(logic_unit_death_id) as \"unitdeath\"",
           "from": "FROM logic_unit_death GROUP BY session_id ORDER BY session_id ASC LIMIT 20",
           "attributes": [
                {
                    "text": "session id",
                    "value": ", text(session_id) as metric" 
                },
                {
                    "text": "creature id",
                    "value": ", text(creature_id) as metric" 
                }                
           ] 
         }
     ]
   }